pipeline {
    agent any
    stages {
        stage('Preparar ambiente') {
            steps {
                echo 'Instalando dependências'
                bat 'choco install python --yes'
                bat 'refreshenv' // Atualiza as variáveis de ambiente
                bat 'python --version'
            }
        }
        stage('Executar main.py') {
            steps {
                echo 'Executando main.py'
                bat 'python main.py'
            }
        }
    }
}